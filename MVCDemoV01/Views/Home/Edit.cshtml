@model MVCDemoV01.Models.Customers
@{
    ViewBag.Title = "客戶資料修改";
}

<h2>客戶資料修改</h2>
<form method="post" action="@Url.Action("Edit")">

    <div class="form-horizontal">
        <div id="divMessage" class="text-danger">@ViewBag.Message</div>
        <hr />

        <div class="form-group">
            <span class="control-label col-md-2">@Html.DisplayNameFor(model => model.CustomerID)</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">@Html.DisplayNameFor(model => model.CompanyName)</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">@Html.DisplayNameFor(model => model.ContactName)</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContactName, new { htmlAttributes = new { @class = "form-control" } })
